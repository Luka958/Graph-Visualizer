<script type="module" src="/scripts/helpers/shrink.js" defer></script>
<link rel="stylesheet" href="styles/shrink.css">

<div id="shrink-div" class="vertical-flex-centered">
    <label for="shrink-input" class="tooltip">
        Shrink Adjustment
        <span class="tooltip-text tooltip-text-top">
            Select expand tool to close.
        </span>
    </label>
    <div class="horizontal-flex-centered">
        <input type="range"
               min="1"
               max="5"
               value="5"
               step="0.1"
               class="slider"
               id="shrink-input"
               name="shrink-input">
        <span id="shrink-val">5.0</span>
    </div>
</div>